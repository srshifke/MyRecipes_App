<% if obj.errors.any? %>
	<div class="row">
		<div class="alert alert-danger col-md-8 col-md-offset-2">
			<h5>Please correct the following <%= "error".pluralize(obj.errors.size) %>:</h5>
			<ul>
				<% obj.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>